<html>
    <head>
        <title>Update a Car</title>
        <link rel = "stylesheet" type = "text/css" href = "/css/bootstrap.css">
        <script src = "https://code.jquery.com/jquery-3.4.1.min.js" type = "text/javascript"></script>
        <script src= "/js/update.js" type = "text/javascript"></script>
        <script src="/js/validator.min.js" type="text/javascript"></script>
        <style>
            .spacer {
                height: 100px;
            }
            
            body {
                background-image: url("https://www.solidbackgrounds.com/images/1920x1080/1920x1080-dark-pastel-blue-solid-color-background.jpg");
            }
            
            table {
                background-color: white;
            }
        </style>
    </head>
    <body class = "p-3 mb-2 bg-light text-dark">
        {{> header flag=flag uName=uName}}
        
        <div class = "spacer"></div>

        <div class = "container rounded-lg p-3 mb-2 bg-light text-dark">
            
            <form id="update" method="post">

                <div class="form-group">
                    <label for="name">Car Name: </label>
                    <input class="form-control" type="text" id="name" name="name" value = "{{name}}" required>
                    <small class="form-text text-muted" id="nameError">{{nameError}}</small>
                </div>

                <div class="form-group">
                    <label for="brand">Brand: </label>
                    <input class="form-control" type="text" id="brand" name="brand" value = "{{brand}}" required>
                    <small class="form-text text-muted" id="brandError">{{brandError}}</small>
                </div>
                
                <div class="form-group">
                    <label for="class">Class: </label>
                    <select class="form-control" id="class" name="class" value="{{carClass}}" required>
                        <option value="Sedan">Sedan</option>
                        <option value="Coupe">SUV</option>
                        <option value="Truck">Truck</option>
                        <option value="Sports">Sports</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="bodystyle">Body Style: </label>
                    <input class="form-control" type="text" id="bodyStyle" name="bodyStyle" value = "{{bodyStyle}}" required>
                    <small class="form-text text-muted" id="bodyStyleError">{{bodyStyleError}}</small>
                </div>

                <div class="form-group">
                    <label for="capacity">Capacity: </label>
                    <input class="form-control" type="text" id="capacity" name="capacity" value = "{{capacity}}" required>
                    <small class="form-text text-muted" id="capacityError">{{capacityError}}</small>
                </div>

                <div class="form-group">
                    <label for="price">Price: </label>
                    <input class="form-control" type="text" id="price" name="price" value = "{{price}}" required>
                    <small class="form-text text-muted" id="priceError">{{priceError}}</small>
                </div>

                <div class="form-group">
                    <label for="desc">Description: </label>
                    <textarea class="form-control" rows="2" cols="50" id="description" name="description" required>{{description}}</textarea>
                    <small class="form-text text-muted" id="descriptionError">{{descriptionError}}</small>
                </div>

                <div class="form-group">
                    <label for="img">Car Image Option 1 URL: </label>
                    <input class="form-control" type="text" id="imgLink" name="imgLink" placeholder="Insert URL here" value = "{{imgLink}}" required>
                    <small class="form-text text-muted" id="imgLinkError">{{imgLinkError}}</small>
                </div>

                <div class="form-group">
                    <label for="optionImg">Car Image Option 2 URL: </label>
                    <input class="form-control" type="text" id="optionImg" name="optionImg" placeholder="Insert URL here" value = "{{optionImg}}" required>
                    <small class="form-text text-muted" id="optionImgError">{{optionImgError}}</small>
                </div>

                <input type="submit" id="submit" class="btn btn-primary btn-lg btn-block" value="Submit">
                    
            </form>
        </div>
    </body>
</html>