<html>
    <head>
        <title>Add a Car</title>
        <link rel = "stylesheet" type = "text/css" href = "/css/bootstrap.css">
        <script src = "https://code.jquery.com/jquery-3.4.1.min.js" type = "text/javascript"></script>
        <style>
            .spacer {
                height: 100px;
            }
            
            body {
                background-image: url("https://ccsanangelo.org/wp-content/uploads/2016/12/simple-background-color-has-web-page-background-color.jpg");
            }
            
            table {
                background-color: white;
            }
        </style>
    </head>
    <body class = "p-3 mb-2 bg-light text-dark">
        {{> header}}
        
        <div class = "spacer"></div>
        <form id="addcar", method="POST">
            <table class = "table table-striped table-bordered table-hover table-sm">
                <tr>
                    <td>Car Image URL: </td>
                    <td><input type="text", id="img", name="img"></td>
                </tr>
                <tr>
                    <td>Car Name: </td>
                    <td><input type="text", id="name", name="name"></td>
                </tr>
                <tr>
                    <td>Brand: </td>
                    <td><input type="text", id="brand", name="brand"></td>
                </tr>
                <tr>
                    <td>Class: </td>
                    <td><select id="class", name="class">
                        <option value="Sedan">Sedan</option>
                        <option value="Coupe">SUV</option>
                        <option value="Truck">Truck</option>
                        <option value="Sports">Sports</option>
                    </select></td>
                </tr>
                <tr>
                    <td>Capacity: </td>
                    <td><input type="text", id="capacity", name="capacity"></td>
                </tr>
                <tr>
                    <td>Price: </td>
                    <td><input type="text", id="price", name="price"></td>
                </tr>
                <tr>
                    <td>Description: </td>
                    <td><textarea rows="2" cols="50", id="desc", name="desc"></textarea></td>
                </tr>
                <tr>
                <td><input type="submit" id="submit" value="SUBMIT"></td>
                </tr>
            </table>
        </form>

        <p id = "warning"></p>
        <script type = "text/javascript">
        function checkField(field, bool) {
            var valid = bool;

            if(field.val() == '') {
            valid = false;
            field.css('border-color', 'red');
            $("#warning").text('Please enter the required field/s.');
            }
            else {
            field.css('border-color', 'white');
            }

            return valid;
        }

        $("#submit").click(function() {
            var valid = true;

            valid = checkField($("#img"), valid);
            valid = checkField($("#name"), valid);
            valid = checkField($("#brand"), valid);
            valid = checkField($("#capacity"), valid);
            valid = checkField($("#price"), valid);
            valid = checkField($("#desc"), valid);

            if(valid == true) {
            $("#warning").text('');
            }

        });
        </script>
    </body>
</html>