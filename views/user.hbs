<html>

<head>
    <link rel = "stylesheet" type = "text/css" href = "/css/bootstrap.css">
    <script src = "https://code.jquery.com/jquery-3.4.1.min.js" type = "text/javascript">
      /* INSERT CODE HERE */
    </script>
    <style>

      .capsule {
        border: 2px solid transparent;
        height: 305px;
        width: 100%;
        border-radius: 15px;
        -moz-border-radius: 15px;
        background-color: transparent;
      }

      .capsuleLeft {
        width: 300px;
        height: auto;
        border-radius: 15px;
        -moz-border-radius: 15px;
      }

      .capsuleRight {
        padding: 10px;
        width: auto;
        border-radius: 15px;
        -moz-border-radius: 15px;
        font-family: sans-serif;
        font-size: 20px;
        margin-bottom: 0em;
      }

      .info {
        font-family: sans-serif;
        font-weight: bold;
        font-size: 50px;
        margin-bottom: 0em;
      }

      .information {
        float: left;
        padding-left: 3px;
        width: 300px;
        height: 245px;
      }

      .profile {
        padding: 5px;
        float: left;
        height: 300px;
        width: 300px;
        margin-right: 5px;
      }

      .profilePicture {
        width: 100%;
        height: 100%;
        border-radius: 50%;
      }

      .spacer {
        height: 100px;
      }
        
      body {
          background-image: url("https://ccsanangelo.org/wp-content/uploads/2016/12/simple-background-color-has-web-page-background-color.jpg");
          background-size: cover;
          background-position: center;
          background-repeat: no-repeat;
      }
    </style>
    
</head>

<body>
    
  <header {{> header}} </header>

    <div class="spacer">
    </div>

    <div class = "container">
      <div class = "card">
        <div class = "capsule">
          <div class = "capsuleLeft">
            <div class = "profile">
              <img class = "profilePicture" src = "https://scontent.fmnl4-1.fna.fbcdn.net/v/t31.0-8/s960x960/25073221_1774868472533140_8438047959028331544_o.jpg?_nc_cat=103&_nc_ohc=jrIEEGTw9IEAX8yx4rj&_nc_ht=scontent.fmnl4-1.fna&_nc_tp=7&oh=f55232d24d070316737d321bddb8dc0d&oe=5EFF63FB" alt = "userImg">
            </div>
          </div>
          <div class = "capsuleRight">
            <p>
              Username: {{uName}}
            </p>
            <p>
              Name: {{fName}} {{lName}}
            </p>
            <p>
              Email: {{email}}
            </p>
            <p>
              Birthday: {{bDay}}
            </p>
            
            <p id = "favoriteCar"></p>
            <label for = "favorite"> What is your favorite car?: </label>
            <input type = "text" id = "favorite" name = "favorite">
            <button id = "submit" class = "btn btn-primary"> Submit </button><br>

            {{#if_eq uName "admin"}}
              <button><a href="/addcar">Add a Car</a></button>
              <button><a href="/chooseUpdate">Update a Car</a></button>
              <button><a href="/delete">Delete a Car</a></button>
            {{/if_eq}}
          </div>
        </div>
      </div>
    </div>

    <script type = "text/javascript">
      $("#submit").click(function() {
        
        $("#favoriteCar").text("My favorite car is the " + $("#favorite").val());
      });
    </script>

  </body>

</html>