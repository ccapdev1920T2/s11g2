<!-- BETA REVAMPED SEARCH -->
<!DOCTYPE HTML>

<html>
    <head>
        <!-- Title -->
        <title> Find Cars </title>
        <!-- Import CSS and JS -->
        <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
        <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
        <!-- Script -->
        <script type="text/javascript">
            $(document).ready(function() {
                //Function: Sort by Class
                $("#filterClass").change(function() {
                    if($("#filterClass").val() == "1") {
                        $(".SUV").show();
                        $(".Sedan").show();
                        $(".Sports").show();
                        $(".Truck").show();
                    }
                    else if($("#filterClass").val() == "2") {
                        $(".SUV").show();
                        $(".Sedan").hide();
                        $(".Sports").hide();
                        $(".Truck").hide();
                    }
                    else if($("#filterClass").val() == "3") {
                        $(".SUV").hide();
                        $(".Sedan").show();
                        $(".Sports").hide();
                        $(".Truck").hide();
                    }
                    else if($("#filterClass").val() == "4") {
                        $(".SUV").hide();
                        $(".Sedan").hide();
                        $(".Sports").show();
                        $(".Truck").hide();
                    }
                    else if($("#filterClass").val() == "5") {
                        $(".SUV").hide();
                        $(".Sedan").hide();
                        $(".Sports").hide();
                        $(".Truck").show();
                    }
                });
            });
        </script>
        <!-- Style -->
        <style>
            /* Listed Alphabetically */
            /* Body */
            body{
                /* Background */
                background-image: url("https://www.solidbackgrounds.com/images/1920x1080/1920x1080-dark-pastel-blue-solid-color-background.jpg");
                /* Full Height */
                height: 100%;
                /* Parallax Effect */
                background-attachment: fixed;
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
            }
            /* Class: Car(depending) */
            .Sedan{
                border: 2px solid transparent;
                margin-bottom: 10px;
                margin-top:10px;
                background-color: white;
                border-radius: 15px;
                -moz-border-radius: 15px;
            }
            .Sports{
                border: 2px solid transparent;
                margin-bottom: 10px;
                margin-top:10px;
                background-color: white;
                border-radius: 15px;
                -moz-border-radius: 15px;
            }
            .SUV{
                border: 2px solid transparent;
                margin-bottom: 10px;
                margin-top:10px;
                background-color: white;
                border-radius: 15px;
                -moz-border-radius: 15px;
            }
            .Truck{
                border: 2px solid transparent;
                margin-bottom: 10px;
                margin-top:10px;
                background-color: white;
                border-radius: 15px;
                -moz-border-radius: 15px;
            }
            /* ID: carListContainer */
            #carListContainer{
                margin: auto;
                background-color: transparent;
                width: 90%;
            }
            /* Class: capsule */
            .capsule{
                border: 2px solid transparent;
                height: 550px;
                width: 100%;
                border-radius: 15px;
                -moz-border-radius: 15px;
                background-color: transparent;
            }
            /* Class (Under capsule): capsuleLeft */
            .capsuleLeft{
                position: absolute;
                width: 300px;
                border-radius: 15px;
                -moz-border-radius: 15px;
            }
            /* Class (Under capsuleLeft): att */
            .att{
                font-family: sans-serif;
                font-weight: bold;
                font-size: 20px;
                margin-bottom: 0em;
            }
            /* Class (Under capsuleLeft): carAtt */
            .carAtt{
                float: left;
                padding-left: 3px;
                width: 300px;
                height: 245px;
            }
            /* Class (Under capsuleLeft): carImg */
            .carImg{
                width: 100%;
                height: 100%;
                border-radius: 4px;
            }
            /* Class (Under capsuleLeft): carPic */
            .carPic{
                padding: 5px;
                float: left;
                height: 250px;
                width: 300px;
            }
            /* Class (Under capsule): capsuleRight */
            .capsuleRight{
                position: absolute;
                left: 390px;
                padding-left: 1px solid white;
                width: 70%;
                border-radius: 15px;
                -moz-border-radius: 15px;
            }
            /* (Under capsuleRight): capsuleRight p */
            .capsuleRight p{
                margin-left: 20px;
                font-size: 20px;
            }
            /* Header */
            h1{
                font-family: sans-serif;
                font-size: 40px;
            }
            /* ID: order */
            #order{
                height: 50px;
                width: 270px;
                font-size: 25px;
            }
            /* ID: searchArea */
            #searchArea{
                text-align: center;
                margin: auto;
                background-color: white;
                border-radius: 15px;
                -moz-border-radius: 15px;
                border: 2px solid transparent;
                width: 90%;
            }
            /* Class: spacer */
            .spacer{
                height: 75px;
            }
        </style>
    </head>
    <body>
        <!-- Header HBS -->
        <header> {{> header}} </header>
        <!-- Space -->
        <div class="spacer"></div>
        <!-- Search Area -->
        <div id="container">
            <div id="searchArea">
                <h1> Find Your Car!!! </h1>
                <label class="mdb-main-label"> Class </label>
                <select id="filterClass" class="mdb-select md-form colorful-select dropdown-primary" searchable="Search here...">
                    <option value="1" selected> All </option>
                    <option value="2"> SUV </option>
                    <option value="3"> Sedan </option>
                    <option value="4"> Sports </option>
                    <option value="5"> Truck </option>
                </select>
            </div>
            <!-- Car Listings -->
            <div id="carListContainer">
                {{#each contents}}
                <div class="{{carClass}}">
                    <div class="capsule">
                        <!-- Left Side Capsule -->
                        <div class="capsuleLeft">
                            <!-- Picture -->
                            <div class="carPic">
                                <img class="carImg" src="{{imgLink}}">
                            </div>
                            <!-- Attributes -->
                            <div class="carAtt">
                                <!-- Will be replaced with icons eventually -->
                                <p class="att"> Name: {{name}} </p>
                                <p class="att"> Brand: {{brand}} </p>
                                <p class="att"> Class: {{carClass}} </p>
                                <p class="att"> Body Style: {{bodyStyle}} </p>
                                <p class="att"> Capacity: {{capacity}} </p>
                                <p class="att"> Price: ${{price}} </p>
                                <a href="/build/{{name}}"><button type="button" class="btn btn-success" id="order"> Build This Car </a>
                            </div>
                        </div>
                        <!-- Right Side Capsule -->
                        <div class="capsuleRight">
                            <p> {{description}} </p>
                        </div>
                    </div>
                </div>
            {{/each}}
            </div>
        </div>
    </body>
</html>